{
  "compilerOptions": {
      "outDir": "build",
      "module": "commonjs",
      "target": "es2017",
      "lib": ["es2018", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "dist",
    "docs",
    "test",
    "util",
    ".vscode"
  ],
  "types": [
    "types"
  ]
}
