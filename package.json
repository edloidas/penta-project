{
  "name": "penta-project",
  "version": "0.0.1-alpha.2",
  "description": "Action platformer with roguelike elements.",
  "main": "build/index.js",
  "keywords": [
    "game",
    "platformer",
    "roguelike",
    "WebGL",
    "desktop",
    "electron"
  ],
  "homepage": "https://github.com/edloidas/penta-project#readme",
  "bugs": {
    "url": "https://github.com/edloidas/penta-project/issues"
  },
  "license": "GPL-3.0",
  "author": "Edloidas Production <edloidas@gmail.com> (https://edloidas.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edloidas/penta-project.git"
  },
  "scripts": {
    "test": "jest",
    "cover": "jest --coverage",
    "report": "node_modules/.bin/jest --coverage && cat coverage/lcov.info | node_modules/coveralls/bin/coveralls.js",
    "clean:build": "rimraf build/*.*",
    "clean:dist": "rimraf dist/",
    "clean": "run-p clean:*",
    "typecheck": "flow check",
    "prettier-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint:js": "eslint --fix .",
    "lint:css-only": "stylelint \"src/**/*.css\"",
    "lint:css-in-js": "stylelint \"src/js/ui/components/**/*.js\"",
    "lint:css": "run-s -c lint:css-*",
    "lint": "run-p -c lint:css lint:js",
    "review": "run-p -c test typecheck lint",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "download": "node util/tasks/download.js",
    "build:app": "cross-env NODE_ENV=production webpack --config webpack.app.config.js",
    "build:game": "cross-env NODE_ENV=production webpack --config webpack.game.config.js",
    "build": "npm run clean:build && run-p build:*",
    "dist": "npm run clean:dist && electron-builder --config electron-builder.json",
    "package": "npm run download && run-s clean:* && run-p build:* && build",
    "try:no-build": "electron build/ --enable-logging",
    "try": "webpack --config webpack.app.config.js && npm run try:no-build",
    "dev": "webpack-dev-server --config webpack.game.config.js --inline --hot --progress --colors --history-api-fallback --open --content-base build/"
  },
  "dependencies": {
    "electron-log": "^2.2.7",
    "electron-updater": "^2.7.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "deep-assign": "^2.0.0",
    "download": "^6.2.5",
    "electron": "^1.6.11",
    "electron-builder": "^19.16.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-airbnb-base": "11.2.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.50.0",
    "history": "^4.6.3",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "mathjs": "^3.14.2",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.2",
    "pify": "^3.0.0",
    "postcss-calc": "^6.0.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-mixins": "^6.0.1",
    "postcss-nested": "^2.0.4",
    "postcss-normalize": "^4.0.0",
    "postcss-simple-vars": "^4.0.0",
    "prettier": "^1.5.3",
    "pug": "^2.0.0-rc.2",
    "pug-loader": "^2.3.0",
    "ramda": "^0.24.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "next",
    "react-test-renderer": "^15.6.1",
    "react-transition-group": "^2.2.0",
    "recompose": "^0.24.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-devtools": "^3.4.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "styled-components": "^2.1.1",
    "stylelint": "^7.13.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.1.2",
    "three": "^0.86.0",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1",
    "yauzl": "^2.8.0"
  },
  "jest": {
    "globals": {
      "GAME_VERSION": "0.0.1-alpha.2"
    }
  },
  "engines": {
    "node": ">= 7.3.0",
    "npm": ">= 3.10.10",
    "yarn": ">= 0.27.5"
  }
}
