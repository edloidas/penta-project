{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 2,
    "selector-pseudo-class-no-unknown": [
      true,
      [ "global", "local" ]
    ],
    "unit-whitelist": [
      [ "em", "rem", "%", "s" ],
      {
        "ignoreProperties": {
          "px": [ "background-position" ]
        }
      }
    ]
  }
}
